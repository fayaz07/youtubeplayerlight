<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVideo">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        app:title="Add Video"
        app:titleTextColor="#fff"
        app:titleMarginStart="10dp">

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/titleVideo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:ems="10"
        android:hint="Title of the video"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/imageUrl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="177dp"
        android:contentDescription="Url of the Image"
        android:ems="10"
        android:hint="Url of video's thumbnail or Image"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/videoUrl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="237dp"
        android:contentDescription="url of @android:string/VideoView_error_button"
        android:ems="10"
        android:hint="Url of the Video(ex:)"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/addVideoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="212dp"
        android:text="Add" />

</RelativeLayout>